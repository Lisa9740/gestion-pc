{% if (computers) %}
    <div class="row mt-5">
        {% for computer in computers %}
            <div class="col =">
                <div class="card">
                    <div class="card-header">
                        {{ computer.name }}
                        <form class="d-inline-block float-right" method="post"
                              action="{{ path('computer_delete', {id: computer.id}) }}"
                              onsubmit="return confirm('Êtes vous sûrs ?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <a class="float-right" type="submit">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-dash-circle-fill"
                                     fill="red" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7z"/>
                                </svg>
                            </a>
                        </form>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>

                            </thead>
                            <tbody>
                            {% for i in 8..18 %}
                                <tr>
                                    <td>
                                        {% if computer.atributions|length == 0 %}
                                            {{ i }} h
                                            <a href="" data-hour="{{ i }}" data-computer="{{ computer.id }}"
                                               class="float-right" data-toggle="modal"
                                               data-target="#add-customer-attribution" id="modal-attribution">
                                                <svg width="1em" height="1em" viewBox="0 0 16 16"
                                                     class="bi bi-plus-circle-fill" fill="currentColor"
                                                     xmlns="http://www.w3.org/2000/svg">
                                                    <path fill-rule="evenodd"
                                                          d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                                                </svg>
                                            </a>
                                            {% block modals %}
                                                {% include 'customer/modal.html.twig'%}
                                            {% endblock %}
                                        {% else %}
                                            {{ i }} h
                                            {% for atribution in computer.atributions %}
                                                {% if atribution.hour == i %}
                                                    <a href="" data-hour="{{ i }}" data-computer="{{ computer.id }}"
                                                       class="float-right" data-toggle="modal"
                                                       data-target="#view-customer-attribution">
                                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-eye" fill="green" xmlns="http://www.w3.org/2000/svg">
                                                            <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"/>
                                                            <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                                        </svg>
                                                    </a>
                                                {% else %}
                                                    <a href="" data-hour="{{ i }}" data-computer="{{ computer.id }}"
                                                       class="float-right" data-toggle="modal"
                                                       data-target="#add-customer-attribution">
                                                        <svg width="1em" height="1em" viewBox="0 0 16 16"
                                                             class="bi bi-plus-circle-fill" fill="currentColor"
                                                             xmlns="http://www.w3.org/2000/svg">
                                                            <path fill-rule="evenodd"
                                                                  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                                                        </svg>
                                                    </a>
                                                {% endif %}
                                             {% endfor %}
                                        {% endif %}
                                    </td>


                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% block javascripts %}
    <script>
            console.log('helpe')

            $("#add-customer-attribution").on('show.bs.modal', function (e) {
                const hour = $(e.relatedTarget).data('hour');
                const computer = $(e.relatedTarget).data('computer');
                $(this).find('#hour').val(hour);
                $(this).find('#computer').val(computer);
            });
    </script>
{% endblock %}
